




#----------------------------------------------------------------------#
# vi macro comment surrounder method.                                  #
#----------------------------------------------------------------------#


function girly
{

awk '

    BEGIN{
        printf("#----------------------------------------------------------------------#\n");
    }

    {
        printf("\# %-68s #\n", $0)
    }

    END{
        printf("#----------------------------------------------------------------------#\n");
    }' $*

return
}


girly girl

